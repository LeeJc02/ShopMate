    },
    {
      "id": "rag_011",
      "query": "积分怎么获得？",
      "expected_sources": ["promotions.md"],
      "expected_keywords": ["消费", "签到", "评价", "邀请"],
      "category": "积分规则"
    },
    {
      "id": "rag_012",
      "query": "以旧换新怎么操作？",
